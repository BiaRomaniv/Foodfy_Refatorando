{% extends "layout.njk" %} {% block content%}
<main>


    <div class="receitas">
        {% for item in items %}
        <div class="cards">
            <div class="card" id={{item.id}}>
                <img src={{item.image}} alt={{item.title}}>
                <p class="tittle"> {{item.title}}</p>
                <p class="criador"> por {{item.author}}</p>
            </div>
        </div>
        {% endfor %}
    </div>


</main>


{% endblock %}